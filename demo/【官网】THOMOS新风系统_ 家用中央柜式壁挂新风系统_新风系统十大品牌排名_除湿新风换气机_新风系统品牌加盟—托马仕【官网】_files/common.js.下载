$(function () {
    // 页面未滑动的下拉效果
    $(".pc-head .container .pv-nav > li").hover(function () {
        if($(this).hasClass("on")){
            return ;
        }else {
            $(this).children(".navdown").stop().slideDown(500).addClass("index-up");
        }
    },function () {
        if($(this).hasClass("on")){
            return ;
        }else  {
            $(this).children(".navdown").stop().slideUp(500);
        }
    });

    if($(window).width()>767 ){
        $(window).scroll(function () {
            if($(window).scrollTop()>10){
                $(".navdown").stop().slideUp(100).removeClass("index-up");
                $(".banner-top").css({"margin-top":"0px"});
                $(".banner-top1").css({"margin-top":"0px"});
                $(".ny-banner.banner-top").css({"margin-top":"100px"});
                $(".pc-head .container .pv-nav >li").hover(function () {                    
                    $(this).children(".navdown").stop().slideDown();
                    
                },function () {
                    $(this).children(".navdown").stop().slideUp();
                   
                });
            }else if($(window).scrollTop() == 0){
                $(".pc-head .container .pv-nav > li.on").find(".navdown").stop().slideDown(100).removeClass("index-up");
                $(".banner-top").css({"margin-top":"115px"});
                $(".ny-banner.banner-top").css({"margin-top":"175px"});
                $(".b3-con.banner-top1").css({"margin-top":"175px"});
                // 下拉
               $(".pc-head .container .pv-nav > li").hover(function () {
                    if($(this).hasClass("on")){
                        return ;
                    }else {
                        $(this).children(".navdown").stop().slideDown(500).addClass("index-up");
                    }
                },function () {
                    if($(this).hasClass("on")){
                         $(this).children(".navdown").stop().slideDown(500);
                        return ;
                    }else  {
                        $(this).children(".navdown").stop().slideUp(500);
                    }
                });
            }
        });
    }


    //头部吸顶
    if ($(window).scrollTop() > 65) {
        $(".pc-head").addClass("opacity");
    }else{
        $(".pc-head").removeClass("opacity");
    }
    $(window).scroll(function() {
        if ($(window).scrollTop() > 65) {
            $(".pc-head").addClass("opacity");
        }else{
            $(".pc-head").removeClass("opacity");
        }
    });

    //友情链接
    $('.link p').click(function (event) {
        event.stopPropagation();
        $(this).toggleClass("act");
        if($(this).hasClass("act")){
            $('.xs').slideDown();
        }else{
            $('.xs').slideUp();
        }
    });
    //点击空白
    $(document).click(function () {
        if( $('.link p').hasClass('act')){
            $(".xs").slideUp();
            $('.link p').removeClass("act");
        }
    });
    var scrollInertiaNum;
    if(/firefox/.test(navigator.userAgent.toLowerCase())){
        scrollInertiaNum = 50;
    } else {
        scrollInertiaNum = 50;
    }
    $(".xs").mCustomScrollbar({
        theme:'dark',
        scrollInertia:scrollInertiaNum,
        horizontalScroll:false,
        axis:"y",
    });

    $("#toTop").click(function(event) {
        /* Act on the event */
        $("html,body").animate({
                scrollTop:"0px"},
            666
        )
    });

    //手机导航按钮
    $(".d-openmenu").click(function(event) {
        $(this).toggleClass("act");//控制按钮的变化

        $(".ph-menu-ul").toggleClass("act");
        $("body,html").animate({
            scrollTop:0
        },500);
        if($('.ph-menu-ul').hasClass("act")){
            $(".ph-menu-ul").fadeIn();
        }else{
            $(".ph-menu-ul").fadeOut();
        }

        $(".d-phonemeng").toggleClass('act');
    });
    $(".d-phonemeng").click(function(event) {
        $(".ph-menu-ul").fadeOut();
        $(".ph-menu-ul").removeClass('act');
        $(".d-openmenu").removeClass('act');
        $(".d-phonemeng").removeClass('act');
    });
    //手机导航下拉
    $(".d-xialaph h4").click(function(){
        $(this).toggleClass("active");
        if($(this).hasClass("active")){
            $(this).find(".img_s").css("display","none");
            $(this).find(".img_d").css("display","block");
        }else{
            $(this).find(".img_d").css("display","none");
            $(this).find(".img_s").css("display","block");
        }
        $(this).parent().siblings(".d-ul2").slideToggle();
        $(this).parent().parent().siblings().find(".d-ul2,.d-ul3").slideUp();
        $(this).parent().parent().siblings().find("h4,h5").removeClass('active');
    });
    $(".d-ul2 h5").click(function(){
        $(this).toggleClass("active");
        if($(this).hasClass("active")){
            $(this).find(".img_s").css("display","none");
            $(this).find(".img_d").css("display","block");
        }else{
            $(this).find(".img_d").css("display","none");
            $(this).find(".img_s").css("display","block");
        }
        $(this).siblings(".d-ul3").slideToggle();
        $(this).parent().siblings().find(".d-ul3").slideUp();
        $(this).parent().siblings().find("h4,h5").removeClass('active');
    });
    //侧边微信hover
    $(".cebian li.wx").hover(function () {
        $(".cebian li.wx .hover-show").fadeIn();
    },function () {
        $(".cebian li.wx .hover-show").fadeOut();
    });
    //侧边QQhover
    $(".cebian li.qq").hover(function () {
        $(".cebian li.qq .qqtan").fadeIn();
    },function () {
        $(".cebian li.qq .qqtan").fadeOut();
    });
    //侧边店铺hover
    $(".cebian li.dianpu").hover(function () {
        $(".cebian li.dianpu .diantan").fadeIn();
    },function () {
        $(".cebian li.dianpu .diantan").fadeOut();
    });

    //手机底部导航下拉
    if($(window).width() <= 990){
        $('.pc-footer .row >p').click(function () {
                $(this).toggleClass("act");
                $(this).siblings("ul").slideToggle();
                $(this).parent().siblings().children("ul").slideUp();
            $(this).parent().siblings().children("p").removeClass("act");
        });
    }


    // 四个格子
    if($(window).width()<= 620 ){
        $(".b3-sizu ul").slick({
            fade:false,
            speed: 600,
            dots:false,
            arrows: false,
            infinite: true,
//            autoplay: true,
            slidesToShow: 1,
            slidesToScroll: 1
        });
        $(".b3-prev").click(function () {
            $(".b3-sizu ul").slick("prev");
        });
        $(".b3-next").click(function () {
            $(".b3-sizu ul").slick("next");
        });
    }
})